{
  "terminals": [
    {
      "name": "Primary",
      "description": "General-use terminal",
      "command": "bash /app/scripts/TerminalPrelude.bash",
      "recycle": true,
      "focus": true,
      "color": "terminal.ansiWhite"
    },
    {
      "name": "Git",
      "description": "Terminal for git commands",
      "command": "bash /app/scripts/TerminalPrelude.bash",
      "recycle": true,
      "icon": "git-branch",
      "color": "terminal.ansiGreen"
    },
    {
      "name": "Rust",
      "description": "Terminal for Cargo and other Rust commands",
      "command": "bash /app/scripts/TerminalPrelude.bash",
      "recycle": true,
      "icon": "gear",
      "color": "terminal.ansiRed"
    },
    {
      "name": "Client",
      "description": "Terminal for running the Portobello client",
      "commands": [
        "bash /app/scripts/TerminalPrelude.bash",
        "yarn workspace client run dev"
      ],
      "recycle": true,
      "execute": false,
      "icon": "debug",
      "color": "terminal.ansiMagenta"
    },
    {
      "name": "Server",
      "description": "Terminal for running the Portobello server",
      "commands": [
        "bash /app/scripts/TerminalPrelude.bash",
        "cargo run --bin server"
      ],
      "recycle": true,
      "execute": false,
      "icon": "debug",
      "color": "terminal.ansiBlue"
    }
  ]
}
